<% if (date == moment().format('YYYY-MM-DD')) { %>
  <h3>Hi! <%= currentUser.name%>. Here are you tasks today!</h3>
<%} else {%>
  <h3>Hi! <%= currentUser.name%>. Here are you tasks on <%=moment(date, 'YYYY-MM-DD').format('dddd')%>, <%=moment(date, 'YYYY-MM-DD').format('LL')%>!</h3>
<%}%>

<div class="subcontainer">
  <div id="weektasks">
  
  </div>
  <div id="habit">
    <div id="habittitle">
      Habits:
    </div>
    water: ğŸ’§ ğŸ’§ ğŸ’§ ğŸ’§ ğŸ’§ 
  </div>
</div>

<form action="/dailytasks/date" method="GET">
  <input type="date" name="date" id="selectdate" value='<%=date%>'>
  <input type="submit" value="Go">
</form>
<a href="/dailytasks/new?date=<%=date%>">add a new task</a>

<div class="" id="dailytasks">
  <% tasks.forEach(function(task){ %>
    <p>
      <h4><a href="/dailytasks/<%=task.id%>"><%=task.summary%></a> (<%=task.type%>) <small><%=moment(task.start).format('HH:mm')%>~<%=moment(task.end).format('HH:mm')%> <a href="/dailytasks/<%=task.id%>/edit">edit</a></small></h4>
      
    </p>
  <%})%>
</div>

<p hidden id='tasksJSON'>
  <%= JSON.stringify(weekTasks);%>
</p>

